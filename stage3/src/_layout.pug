doctype html
html(lang="zh-hant")
  block vars
    - var header_title = ''
    - var author = ''
    - var og_title = ''
    - var og_image = ''
    - var og_url = ''
    - var og_desc = ''
    - var meta_keyword = ''
  head
    block head
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,Chrome=1')
      meta(http-equiv='Cache-Control', content='no-cache')
      meta(http-equiv='Pragma', content='no-cache')
      meta(http-equiv='Expires', content='0')
      meta(property='og:title', content=(og_title ? og_title + ' - ' + author : ''))
      meta(property='og:image', content=og_image ? og_image : '')
      meta(property='og:url', content=og_url ? og_url : '')
      meta(property='og:description', content=og_desc ? og_desc : '')
      meta(name='author', content=author)
      meta(name='copyright', content=author)
      meta(name='keywords', content=meta_keyword ? meta_keyword : '')
      meta(name='description', content=og_desc ? og_desc : '')
      meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
      title #{og_title ? og_title + ' - ' + author : ''}
      link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")
      link(href='css/styles.css', rel='stylesheet', type='text/css')
      script(src='js/jquery-3.3.1.min.js', type='text/javascript')
      script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous")
      script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous")
      script(defer="" src="https://use.fontawesome.com/releases/v5.1.0/js/all.js" integrity="sha384-3LK/3kTpDE/Pkp8gTNp2gR/2gOiwQ6QaO7Td0zV76UFJVhqLl4Vl3KL1We6q6wR9" crossorigin="anonymous")
      script(src='js/main.js', type='text/javascript')

  body
    .wrapper-container
      .wrapper
        .wrapper-mask
        block header
          header
            .container
              .row
                .col-2
                  p SHOPTIME
                .col.menu
                  ul.row
                    li.col-2.active
                      a(href="#") Home
                    li.col-2
                      a(href="#") ORDERS
                    li.col-2
                      a(href="#") PRODUCT
                .col-2.admin
                  a(href="#") ADMIN

        block left
        block content
        block foot
          footer

    block script