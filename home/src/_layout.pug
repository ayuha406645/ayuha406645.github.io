doctype html
html(lang="zh-hant")
  block vars
    - var header_title = 'The F2E 前端修煉精神時光屋 每周挑戰 @Bambe'
    - var og_title = 'The F2E 前端修煉精神時光屋 每周挑戰 @Bambe'
    - var og_image = ''
    - var og_url = ''
    - var og_desc = ''
    - var meta_keyword = ''
  head
    block head
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,Chrome=1')
      meta(http-equiv='Cache-Control', content='no-cache')
      meta(http-equiv='Pragma', content='no-cache')
      meta(http-equiv='Expires', content='0')
      meta(property='og:title', content=og_title ? og_title : '')
      meta(property='og:image', content=og_image ? og_image : '')
      meta(property='og:url', content=og_url ? og_url : '')
      meta(property='og:description', content=og_desc ? og_desc : '')
      meta(name='keywords', content=meta_keyword ? meta_keyword : '')
      meta(name='description', content=og_desc ? og_desc : '')
      meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
      title #{og_title}
      link(rel='shortcut icon', href='')
      link(href='css/styles.css', rel='stylesheet', type='text/css')
      script(src='js/jquery-3.3.1.min.js', type='text/javascript')
      script(src='js/jquery.lightbox_me.js', type='text/javascript')
      script(src='js/main.js', type='text/javascript')

  body
    .wrapper-container
      .wrapper
        .wrapper-mask
        block header
          header
            .header-top
              .container
                h1 #{header_title}

        block left
        block content
        block foot